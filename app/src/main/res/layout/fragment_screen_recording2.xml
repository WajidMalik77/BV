<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ScreenRecordingFragment">
  <SurfaceView
      android:id="@+id/surfaceView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"
        tools:layout_editor_absoluteX="1dp">

      <com.airbnb.lottie.LottieAnimationView
          android:id="@+id/countDown"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:elevation="5dp"
          android:translationZ="5dp"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:lottie_autoPlay="false"
          app:lottie_rawRes="@raw/count_down" />


    </FrameLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
  <TextView
      android:id="@+id/startrecordingbtnfragemtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Start"
      android:textColor="@color/white"
      android:drawableStart="@drawable/recording_icon_screen"
      android:gravity="center"
      android:paddingStart="20dp"
      android:background="@drawable/screen_recording_start_btn"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>