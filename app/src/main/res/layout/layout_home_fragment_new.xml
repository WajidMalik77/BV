            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:layout_constraintHeight_percent="0.30"
            app:layout_constraintBottom_toBottomOf="parent"
