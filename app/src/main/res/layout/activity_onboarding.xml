<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/skipBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="@string/skip"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/nativeAdonBoarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintBottom_toTopOf="@id/nextBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nextBtn"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_marginVertical="5dp"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:paddingVertical="10dp"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/blue_round_btn_bg"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nativeAdonBoarding"/>

    <FrameLayout
        android:id="@+id/nativeAdonBoarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_margin="3dp"
        app:layout_constraintHeight_percent=".20"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/native_ad_bg_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextBtn">
        <com.facebook.ads.NativeAdLayout
            android:id="@+id/native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>