<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/nativeAd"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="2dp"
        android:background="@drawable/native_ad_bg_selector"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomView"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/ad_is_loading"
            android:textColor="@color/black" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playContainer"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        android:background="@drawable/unselected_bg"
        android:elevation="3dp"
        android:translationZ="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".95">

        <TextView
            android:id="@+id/pressTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/press_the_button_to_start_recording"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.7"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/startRecording"
            app:layout_constraintTop_toTopOf="@+id/startRecording" />

        <ImageView
            android:id="@+id/startRecording"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintWidth_percent="0.125"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/recordTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/record"
            android:textColor="@color/endColor"
            app:layout_constraintEnd_toEndOf="@+id/pressTxt"
            app:layout_constraintStart_toStartOf="@+id/pressTxt"
            app:layout_constraintTop_toTopOf="@+id/chronometerHome" />

        <Chronometer
            android:id="@+id/chronometerHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_600"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/pressTxt"
            app:layout_constraintStart_toStartOf="@+id/pressTxt"
            app:layout_constraintTop_toBottomOf="@+id/pressTxt" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playContainer">

        <ImageView
            android:id="@+id/trimLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:src="@drawable/unlock"
            android:translationZ="5dp"
            app:layout_constraintEnd_toEndOf="@+id/trimVideo"
            app:layout_constraintTop_toTopOf="@+id/trimVideo" />

        <ImageView
            android:id="@+id/favouriteLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:src="@drawable/unlock"
            android:translationZ="5dp"
            app:layout_constraintEnd_toEndOf="@+id/favourite"
            app:layout_constraintTop_toTopOf="@+id/favourite" />

        <ImageView
            android:id="@+id/recordingLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:src="@drawable/unlock"
            android:translationZ="5dp"
            app:layout_constraintEnd_toEndOf="@+id/recordings"
            app:layout_constraintTop_toTopOf="@+id/recordings" />

        <LinearLayout
            android:id="@+id/trimVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/unselected_bg"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:translationZ="3dp"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/favourite"
            app:layout_constraintEnd_toStartOf="@+id/recordings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".47">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:src="@drawable/trim" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/trim_video"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recordings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/unselected_bg"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:translationZ="3dp"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="@+id/trimVideo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/trimVideo"
            app:layout_constraintTop_toTopOf="@+id/trimVideo"
            app:layout_constraintWidth_percent=".47">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:src="@drawable/recordings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="@string/recordings"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favourite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/unselected_bg"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:translationZ="3dp"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trimVideo"
            app:layout_constraintWidth_percent=".47">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:src="@drawable/favorite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="@string/favorites"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/unselected_bg"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:translationZ="3dp"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="@+id/favourite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/favourite"
            app:layout_constraintTop_toTopOf="@+id/favourite"
            app:layout_constraintWidth_percent=".47">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:src="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/nativeAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playContainer">

        <!--        <androidx.constraintlayout.widget.ConstraintLayout-->
        <!--            android:id="@+id/fzool"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:gravity="center"-->
        <!--            app:layout_constraintBottom_toTopOf="@+id/soundViewLotti"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent">-->

        <ImageView
            android:id="@+id/rotateCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/select_camera"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/preview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/preview"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/rotateCamera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Click to show camera"
            app:layout_constraintEnd_toEndOf="@+id/preview"
            app:layout_constraintStart_toStartOf="@+id/preview"
            app:layout_constraintTop_toBottomOf="@+id/preview" />
        <!--        </androidx.constraintlayout.widget.ConstraintLayout>-->


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/soundViewLotti"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/anim_waves" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.camera.view.PreviewView
        android:id="@+id/movaAble"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_rnd_corners_all"
        android:backgroundTint="@color/white"
        android:elevation="16dp"
        android:translationZ="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>